<%= title %>
<form method="post" action="/task/delete">
<ul class="task-list">
<% tasks.forEach((task)=>{%>
	<li>
	<label>
		<input type="checkbox" name="tasks" class="del" value="<%= task %>"><span><%= task %></span>
	</label>
	
<%})%>
</ul>
<input type="submit" value="remove"/>
</form>

